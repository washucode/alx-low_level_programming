#include <stdio.h>
#include <stdlib.h>
#include <time.h>
/**
 * positive_or_negative - entry point of this program
 * Description: checks if a number is positive negative or zeri
 * @n - character to be checked
 * Return: 0
 */
int positive_or_negative(int n)
{
	int n;

	srand(time(0));
	n = rand() - RAND_MAX / 2;
	if (n > 0)
	{
		printf("%d is positive\n", n);
	}
	else if (n == 0)
	{
		printf("%d is zero\n", n);
	}
	else if (n < 0)
	{
		printf("%d is negative\n", n);
	}
	return (0);
}
